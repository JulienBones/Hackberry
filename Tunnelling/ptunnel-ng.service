
[Unit]
Description=ptunnel-ng ICMP TCP tunnel daemon
After=network-online.target
Wants=microsocks.service
[Service]
Type=forking

ExecStart=/usr/bin/ptunnel-ng -d -P PassTunel -r127.0.0.1 -R1080
AmbientCapabilities=CAP_NET_RAW
CapabilityBoundingSet=CAP_NET_RAW
NoNewPrivileges=true
User=root
StandardOutput=append:/var/log/ptunnel-ng.log
StandardError=append:/var/log/ptunnel-ng.log
Restart=on-failure
RestartSec=5s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
